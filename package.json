{
  "name": "@yugu/i18n-monorepo",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "run-s dev:*",
    "dev:i18n-cli": "pnpm --filter @yugu/i18n-cli dev",
    "build:i18n-cli": "pnpm --filter @yugu/i18n-cli build",
    "release:i18n-cli": "pnpm --filter @yugu/i18n-cli release",
    "dev:i18n-core": "pnpm --filter @yugu/i18n-core dev",
    "build:i18n-core": "pnpm --filter @yugu/i18n-core build",
    "release:i18n-core": "pnpm --filter @yugu/i18n-core release",
    "dev:i18n-vue": "pnpm --filter @yugu/i18n-vue dev",
    "build:i18n-vue": "pnpm --filter @yugu/i18n-vue build",
    "release:i18n-vue": "pnpm --filter @yugu/i18n-vue release",
    "playground": "run-p playground:*",
    "start:vue2": "pnpm --filter @playground/vue2 serve",
    "build:vue2": "pnpm --filter @playground/vue2 build",
    "i18n:vue2": "pnpm --filter @playground/vue2 i18n",
    "i18n:vue2-init": "pnpm --filter @playground/vue2 i18n:init",
    "i18n:vue2-parse": "pnpm --filter @playground/vue2 i18n:parse",
    "start:vue3": "pnpm --filter @playground/vue3 dev",
    "build:vue3": "pnpm --filter @playground/vue3 build"
